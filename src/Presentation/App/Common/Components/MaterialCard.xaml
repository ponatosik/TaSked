<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             x:Class="TaSked.App.Components.MaterialCard">
    <ContentView.Content>

        <uranium:StatefulContentView>
            <Border Padding="20" BackgroundColor="{StaticResource DarkSurface}" Stroke="{StaticResource DarkOutlineVariant}" StrokeShape="{RoundRectangle CornerRadius=12}">
                <Label Text="Stateful material design card" TextColor="{StaticResource DarkOnSurface}" />
            </Border>
        </uranium:StatefulContentView>

    </ContentView.Content>
</ContentView>
