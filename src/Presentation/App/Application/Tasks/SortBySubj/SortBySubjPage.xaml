<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             xmlns:components="clr-namespace:TaSked.App.Components"
             x:Class="TaSked.App.SortBySubjPage"
             x:DataType="local:SortBySubjViewModel"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    
    <AbsoluteLayout Margin="0,0" Padding="0,0">
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="SizeProportional">
            <CollectionView ItemsSource="{Binding TaskGroups}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:TaskGroupModel">
                        <components:TaskGroup TaskGroupModel ="{Binding}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        <Button
    AbsoluteLayout.LayoutBounds="0.95,0.945"
    AbsoluteLayout.LayoutFlags="PositionProportional"
    Text="+" Command="{Binding CreateTaskCommand}"
    CornerRadius="50"/>
    </AbsoluteLayout>
</ContentPage>