<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             xmlns:components="clr-namespace:TaSked.App.Components"
             xmlns:domain="clr-namespace:TaSked.Domain;assembly=Domain"
             x:DataType="local:CreateTaskViewModel"
             x:Class="TaSked.App.CreateTaskPage"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <StackLayout>
        <Label Text="Створити завдання" HorizontalTextAlignment="Center"/>

        <material:PickerField Title="Завдання з предмету" SelectedItem="{Binding Subject}" ItemsSource="{Binding AvailableSubjects}" Margin="30,10" ItemDisplayBinding="{Binding Name}" TextColor="White"/>
        <material:DatePickerField Title="Виберіть дату" Date="{Binding Deadline}" Margin="30,10" TextColor="White"/>
        <material:TextField Title="Назва задвання" Text="{Binding Title}" Margin="30,10"/>
        <material:EditorField Title="Опис завдання" Text="{Binding Description}" Margin="30,10" TextColor="White"/>

        <Button Command="{Binding CreateTaskCommand}" Margin="100,10" Text="Створити" TextColor="#242424" BackgroundColor="#FFFBCD"/>
        
    </StackLayout>

</ContentPage>