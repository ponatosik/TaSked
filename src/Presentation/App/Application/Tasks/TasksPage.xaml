<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             xmlns:components="clr-namespace:TaSked.App.Components"
             x:Class="TaSked.App.TasksPage"
             x:DataType="local:TasksViewModel"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <ScrollView>
        <ListView ItemsSource="{Binding Tasks}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TaskViewModel">
                    <ViewCell>
                        <VerticalStackLayout>
                            <components:TaskCard Model ="{Binding}"/>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ScrollView>

</ContentPage>