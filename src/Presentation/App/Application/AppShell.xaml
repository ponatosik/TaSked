<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaSked.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaSked.App"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False">

    <FlyoutItem Title="TaSked" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="TaSked"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"/>

        <ShellContent
            Title="Create Group"
            ContentTemplate="{DataTemplate local:CreateGroupPage}"
            Route="CreateGroupPage"/>

        <ShellContent
            Title="Join Group"
            ContentTemplate="{DataTemplate local:JoinGroupPage}"
            Route="JoinGroupPage"/>

    </FlyoutItem>

</Shell>
