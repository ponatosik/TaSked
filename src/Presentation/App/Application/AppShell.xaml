<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaSked.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaSked.App"
    Shell.FlyoutBehavior="Disabled">

    

    <TabBar>
        <Tab Title="Завдання">
            <ShellContent
                Title="Невиконані"
                ContentTemplate="{DataTemplate local:TasksPage}"
                Route="TasksPage"/>

            <ShellContent
                Title="Всі"
                ContentTemplate="{DataTemplate local:TasksPage}"
                Route="TasksPage"/>

            <ShellContent
                Title="За предметами"
                ContentTemplate="{DataTemplate local:TasksPage}"
                Route="TasksPage"/>
        </Tab>

        <Tab Title="Предмети">
            <ShellContent
                Title="Всі"
                ContentTemplate="{DataTemplate local:SubjectPage}"
                Route="SubjectPage"/>

            <ShellContent
                Title="Онлайн посиланняи"
                ContentTemplate="{DataTemplate local:SubjectPage}"
                Route="SubjectPage"/>

            <ShellContent
                Title="Розклад"
                ContentTemplate="{DataTemplate local:SubjectPage}"
                Route="SubjectPage"/>
        </Tab>

        <Tab Title="Оголошення">
            <ShellContent
                Title="Оголошення"
                ContentTemplate="{DataTemplate local:ReportPage}"
                Route="ReportPage"/>
        </Tab>
    </TabBar>

</Shell>
