<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             x:Class="TaSked.App.JoinGroupPage"
             x:DataType="local:JoinGroupViewModel"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">
    
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Доєднатися до групи" HorizontalOptions="Center" FontSize="30" Margin="0,200,0,0" TextColor="#FFFFFF"/>

            <material:TextField Text="{Binding GroupInvitationId}" Title="ID запрошення" Margin="30,40"/>
            <material:TextField Text ="{Binding UserNickname}" Title="Ваш псевдонім" Margin="30,-20"/>
            <Label Text="Ваш псевдонім бачитимуть модератори групи. Псевдонім неможливо змінити пізніше." HorizontalOptions="Center" FontSize="12" Margin="25,40,0,0" TextColor="#DFD5EC"/>
            <Button StyleClass="FilledButton" Command="{Binding JoinGroupCommand}" Text="Доєднатися" Margin="50,50"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>