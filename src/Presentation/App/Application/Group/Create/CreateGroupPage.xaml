<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             x:Class="TaSked.App.CreateGroupPage"
             x:DataType="local:CreateGroupViewModel"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             Shell.NavBarIsVisible="false">
    
    <VerticalStackLayout>
        <Label Text="Створити групу" HorizontalOptions="Center" FontSize="30" Margin="0,200,0,0" TextColor="#FFFFFF"/>

        <material:TextField Title="Назва групи" Text="{Binding GroupName}" Margin="30,40"/>
        <material:TextField Title="Ваш псевдонім" Text="{Binding UserNickname}" Margin="30,-20"/>
        <Label Text="Ваш псевдонім бачитимуть модератори групи. Псевдонім неможливо змінити після створення групи." HorizontalOptions="Center" FontSize="12" Margin="25,50" TextColor="#DFD5EC"/>
        <Button StyleClass="FilledButton" Text="Створити групу" Command="{Binding CreateGroupCommand}" Margin="190,-10, 30, 0" TextColor="#242424"/>
    </VerticalStackLayout>
</ContentPage>