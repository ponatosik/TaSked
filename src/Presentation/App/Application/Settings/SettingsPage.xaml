<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaSked.App.Application.SettingsPage"
             xmlns:local="clr-namespace:TaSked.App.Application"
             x:DataType="local:SettingsViewModel"
             Title="SettingsPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">
    <VerticalStackLayout>
        <Button
            Text="Вийти з акаунта" Margin="100,300"
            Command="{Binding LogoutCommand}"/>

        <Button
            Text="Назначити роль" Margin="100,-250"
            Clicked="JoinRolePage"/>

        <Button
            Text="Запрошення" Margin="100,300"
            Clicked="JoinInvintationsPage"/>
    </VerticalStackLayout>
</ContentPage>