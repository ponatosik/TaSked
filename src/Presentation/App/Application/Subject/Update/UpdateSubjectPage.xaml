<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             xmlns:components="clr-namespace:TaSked.App.Components"
             xmlns:domain="clr-namespace:TaSked.Domain;assembly=Domain"
             x:DataType="local:UpdateSubjectViewModel"
             x:Class="TaSked.App.UpdateSubjectPage"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <StackLayout>
        <Label Text="Змінти предмет" HorizontalTextAlignment="Center"/>

        <material:TextField Title="Назва предмету" Text="{Binding SubjectDTO.Name}" Margin="30,10"/>
        <material:TextField Title="Викладач" Text="{Binding SubjectDTO.Teacher.FullName}" Margin="30,10"/>
        <Button Command="{Binding UpdateSubjectCommand}" Margin="100,10" Text="Оновити"/>
        
    </StackLayout>

</ContentPage>