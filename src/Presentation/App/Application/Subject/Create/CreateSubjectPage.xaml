<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App"
             xmlns:components="clr-namespace:TaSked.App.Components"
             xmlns:domain="clr-namespace:TaSked.Domain;assembly=Domain"
             x:DataType="local:CreateSubjectViewModel"
             x:Class="TaSked.App.CreateSubjectPage"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material">

    <StackLayout>
        <Label Text="Створити предмет" HorizontalTextAlignment="Center"/>

        <material:TextField Title="Назва предмету" Text="{Binding Name}" Margin="30,10"/>
        <Button Command="{Binding CreateSubjectCommand}" Margin="100,10" Text="Створити"/>
        
    </StackLayout>

</ContentPage>