<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaSked.App.Components"
             x:Class="TaSked.App.Components.Divider"
             x:DataType="local:Divider"
             x:Name="dividerComponent">

    <VerticalStackLayout>
        <BoxView StyleClass="Divider" />
        <Label Text="{Binding LabelText, Source={Reference dividerComponent}}" Margin="30, 0"/>
    </VerticalStackLayout>

</ContentView>
