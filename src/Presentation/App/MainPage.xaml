             x:Class="TaSked.App.MainPage">

    <VerticalStackLayout Padding="50" BackgroundColor="Black">

        <Label HorizontalOptions="Center" FontSize="40" Margin="0,200,0,0">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Ta" TextColor="Purple" />
                    <Span Text="Sked" TextColor="Orange" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Button Text="Створити групу" Margin="0,100,0,0" FontSize="20"/>
        <Button Text="Доєднатись до групи" Margin="0,20,0,0" FontSize="20"/>

